<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="1140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mystorage_background_01"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="89dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="128dp"
                android:layout_height="359dp">

                <ImageView
                    android:id="@+id/mystorage_image1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mystorage_main_01_pattern"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/mystorage_main1_progress1"
                        android:layout_width="128dp"
                        android:layout_height="36dp"/>


                    <ImageView
                        android:id="@+id/mystorage_main1_progress2"
                        android:layout_width="128dp"
                        android:layout_height="53dp"
                        android:layout_below="@id/mystorage_main1_progress1" />


                    <ImageView
                        android:id="@+id/mystorage_main1_progress3"
                        android:layout_width="128dp"
                        android:layout_height="24dp"
                        android:layout_below="@id/mystorage_main1_progress2" />

                </RelativeLayout>

            </FrameLayout>


            <ImageView
                android:id="@+id/mystorage_information1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/mystorage_main_01_text"/>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>
