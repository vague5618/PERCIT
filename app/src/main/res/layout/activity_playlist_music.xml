<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="1280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/playlist_music_actionbar"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/playlist_music_background"
        android:layout_width="1280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/playlist_music_background_marryyou1"
        android:orientation="vertical">

    </LinearLayout>


    <ImageView
        android:id="@+id/playlist_music_back"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/musicstage_sub_actionbar_01_icon" />

    <Button
        android:id="@+id/playlist_music_play"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/playlist_music_play_icon" />

    <Button
        android:id="@+id/playlist_music_pause"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/playlist_music_pause_icon" />

    <Button
        android:id="@+id/playlist_music_record_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/playlist_music_record_icon" />

    <Button
        android:id="@+id/playlist_music_save"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="244dp"
        android:background="@drawable/playlist_music_01_btn_unfocus"/>

</FrameLayout>
