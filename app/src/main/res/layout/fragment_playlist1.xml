                        android:layout_height="wrap_content"
                        android:layout_below="@id/playlist_main2_progress1" />

                    <ImageView
                        android:id="@+id/playlist_main2_progress3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/playlist_main2_progress2" />

                </RelativeLayout>

            </FrameLayout>

            <ImageView
                android:id="@+id/playlist_information2"
                android:layout_width="wrap_content"
