<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/activity_handler"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/setting_back1"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/dropView1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:background="#00aa00" />


            <ImageView
                android:id="@+id/dropView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:background="#00aa00" />



            <ImageView
                android:id="@+id/dropView3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:background="#00aa00" />



        </FrameLayout>



        <LinearLayout
            android:layout_width="426dp"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/setting_category1_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"></ListView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="426dp"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/setting_category2_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>


        </LinearLayout>


    </LinearLayout>


</FrameLayout>