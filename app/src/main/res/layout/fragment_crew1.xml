<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="1081dp"
        android:layout_height="wrap_content"
        android:background="@drawable/crew_main_background_0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="84dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="128dp"
                    android:layout_height="359dp">

                    <ImageView
                        android:id="@+id/crew_image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/crew_main_01_pattern" />


                </FrameLayout>

                <ImageView
                    android:id="@+id/crew_information1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/crew_main_01_text" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="169dp"
                android:layout_marginTop="84dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="128dp"
                    android:layout_height="359dp">

                    <ImageView
                        android:id="@+id/crew_image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/crew_main_02_pattern" />


                </FrameLayout>

                <ImageView
                    android:id="@+id/crew_information2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/crew_main_02_text" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="169dp"
                android:layout_marginTop="84dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="128dp"
                    android:layout_height="359dp">

                    <ImageView
                        android:id="@+id/crew_image3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/crew_main_03_pattern" />


                </FrameLayout>

                <ImageView
                    android:id="@+id/crew_information3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/crew_main_02_text" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="571dp"
            android:background="@drawable/crew_main_01_btn_unfocus" />

    </FrameLayout>

</LinearLayout>
