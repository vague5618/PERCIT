<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jay.percit" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"></uses-feature>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/percit_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Controller.CommunityActivity"
            android:label="CommunityActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.CrewActivity"
            android:label="@string/title_activity_crew" >
        </activity>
        <activity
            android:name=".Controller.MusicplayerActivity"
            android:label="@string/title_activity_musicplayer" >
        </activity>

        <service android:name="com.example.jay.percit.Util.BluetoothLeService" android:enabled="true"/>

      //  <service android:name=".Util.BluetoothConnectService" android:enabled="true"/>
    </application>


</manifest>
